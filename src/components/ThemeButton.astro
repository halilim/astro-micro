---
import { Icon } from 'astro-icon/components';

const { otherClasses, iconName, ...props } = Astro.props;
---

<button
  {...props}
  class={`group flex size-9 cursor-pointer items-center justify-center hover:bg-black/5 focus-visible:bg-black/5 dark:hover:bg-white/5 dark:focus-visible:bg-white/5 ${otherClasses}`}
>
  <Icon
    name={iconName}
    class="size-4 transition-colors duration-300 ease-in-out group-hover:animate-pulse group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black dark:group-hover:stroke-white dark:group-focus-visible:stroke-white"
  />
</button>
