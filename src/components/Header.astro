---
import Container from '@components/Container.astro';
import Link from '@components/Link.astro';
import { SITE } from '@consts';
import HIcon from '../../public/H.svg';
import { Icon } from 'astro-icon/components';

const { isHome } = Astro.props;
---

<header transition:persist>
  <Container>
    <div class="flex flex-wrap items-center justify-between gap-y-2">
      <Link href="/" underline={false}>
        <div class="flex items-center font-semibold text-lg">
          <HIcon aria-label="H icon" class="mr-2 size-8" />
          {isHome ? <h1>{SITE.TITLE}</h1> : <span>{SITE.TITLE}</span>}
        </div>
      </Link>

      <nav class="flex items-center gap-1">
        <Link href="/blog">blog</Link>
        <span class="mx-2">•</span>
        <Link href="/about">about</Link>
        <span class="mx-2">•</span>

        <button
          id="magnifying-glass"
          aria-label="Search"
          class="flex cursor-pointer items-center gap-1 rounded-full border border-black/15 bg-neutral-100 p-2 text-sm transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black sm:p-1 md:px-2 dark:border-white/20 dark:bg-neutral-900 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
        >
          <Icon name="material-symbols:search" />
          <span class="hidden sm:inline">Search</span>
        </button>
      </nav>
    </div>
  </Container>
</header>
