---
import { cn } from '@lib/utils';
import { Image } from 'astro:assets';
import halilJpg from '/public/halil.jpg';

const { class: otherClasses = '', ...rest } = Astro.props;
---

<Image
  src={halilJpg}
  alt="Halil"
  class={cn(
    'rounded-full border-2 border-stone-300 transition-colors duration-300 ease-in-out \
    hover:border-stone-400 active:border-stone-400 \
    dark:border-stone-600 dark:opacity-75 dark:transition-opacity dark:hover:opacity-100',
    otherClasses
  )}
  {...rest}
/>
