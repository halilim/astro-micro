---
import Footer from '@components/Footer.astro';
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import Pagefind from '@components/PageFind.astro';
import type { OgImage } from '@types';

type Props = {
  isHome?: boolean;
  title: string;
  description?: string;
  image?: OgImage;
};

const { isHome = false, title, description = '', image } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head {title} {description} {image} />
  </head>
  <body>
    <noscript>
      <style>
        .animate {
          opacity: 1;
          translate: var(--tw-translate-x) calc(var(--spacing) * 0);
        }
      </style>
    </noscript>
    <Header {isHome} />
    <main>
      <slot />
    </main>
    <Footer />
    <Pagefind />
  </body>
</html>
